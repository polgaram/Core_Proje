@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <br />
            
            <form method="get">
                <p>
                    Başlık: @Html.TextBox("AnnouncementTitle")
                    Tarih: <input type="date" name="AnnouncementDate">
                    Tür: @Html.TextBox("AnnouncementStatus")
@*
                    Başlık: <input type="text" name="AnnouncementTitle" />
                    Tarih: <input type="date" name="AnnouncementDate" />*@

                    <input type="submit" value="Ara" class="btn btn-outline-primary" />
                </p>
            </form>

            <br />
            <div>
                <table class="display" id="example" style="width:99%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.ID</th>
                                <td>@item.Title</td>
                                <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                                <td><label class="badge badge-danger">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.ID" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

