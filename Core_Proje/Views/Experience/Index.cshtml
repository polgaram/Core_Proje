@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Resim</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceID</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td>@item.ImageUrl</td>
                                <td>@item.Description</td>

                                <td>
                                    <a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger btn-icon-text">
                                        <i class="mdi mdi-delete btn-icon-prepend"></i> Sil
                                    </a>
                                </td>
                                <td>
                                    <a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-primary btn-icon-text">
                                        <i class="mdi mdi-grease-pencil btn-icon-prepend"></i> Düzenle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Experience/AddExperience" class="btn btn-outline-info btn-icon-text m-4">
                    <i class="mdi mdi-library-plus btn-icon-prepend"></i> Yeni Deneyim Ekle
                </a>
            </div>
        </div>
    </div>
</div>

