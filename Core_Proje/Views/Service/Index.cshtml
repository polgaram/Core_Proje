@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <!-- Card header -->
            <div class="card-header border-0">
                <h4 class="mb-0">Hizmet Listesi Tablosu</h4>
            </div>
            <!-- Light table -->
            <div class="table-responsive bg-black">
                <table class="table align-items-center table-flush">
                    <thead class="bg-black">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col" class="sort" data-sort="status">Resim</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.ServiceID</span>
                                        </div>
                                    </div>
                                </th>
                                <td>@item.Title</td>
                                <td>@item.ImageUrl</td>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm"><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm"><a href="/Service/EditService/@item.ServiceID" class="btn btn-primary">Düzenle</a></span>
                                        </div>
                                    </div>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>

                <a href="/Service/AddService" class="btn btn-primary m-4">Yeni Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>
