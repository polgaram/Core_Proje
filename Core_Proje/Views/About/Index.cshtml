@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header border-0">
                <h3 class="mb-0">Öne Çıkan Post Düzenleme Sayfası</h3>
            </div>

            <form asp-controller="About" asp-action="Index" class="card-header bg-black" method="post">

                @Html.HiddenFor(x=>x.AboutID)
                <br />
                @Html.Label("Başlık")
                @Html.TextBoxFor(x=>x.Title,new {@class = "form-control"})
                <br />
                @Html.Label("Açıklama")
                @Html.TextAreaFor(x=>x.Description,10,3,new {@class = "form-control"})
                <br />
                @Html.Label("Yaş")
                @Html.TextBoxFor(x=>x.Age,new {@class = "form-control"})
                <br />
                @Html.Label("Mail")
                @Html.TextBoxFor(x=>x.Mail,new {@class = "form-control"})
                <br />
                @Html.Label("Telefon")
                @Html.TextBoxFor(x=>x.Phone,new {@class = "form-control"})
                <br />
                @Html.Label("Adres")
                @Html.TextBoxFor(x=>x.Address,new {@class = "form-control"})
                <br />
                @Html.Label("Resim")
                @Html.TextBoxFor(x=>x.ImageUrl,new {@class = "form-control"})
                <br />
                <button type="submit" class="btn btn-success">Güncelle</button>
            </form>
        </div>
    </div>
</div>