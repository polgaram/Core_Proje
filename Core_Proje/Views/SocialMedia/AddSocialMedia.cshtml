@model SocialMedia
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Sosya Medya Ekleme</h3>
</div>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form class="card-header bg-black" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Ad</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Url" class="control-label">Url</label>
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon" class="control-label">İkon</label>
                    <input asp-for="Icon" class="form-control"/>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>

                <div class="form-check form-check-flat form-check-primary">
                    <label asp-for="Status" class="form-check-label" style="color:white">
                        Durum
                        <input asp-for="Status" type="checkbox" class="form-check-input" checked><i class="input-helper"></i>
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-outline-success" />
                    <a href="javascript:history.back()" type="button" class="btn btn-outline-danger">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

